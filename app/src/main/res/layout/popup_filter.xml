<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.9">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:paddingBottom="8dp"
                android:text="Filter by Rarity"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Rarity Toggle Buttons -->
            <ToggleButton
                android:id="@+id/toggle_common"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@drawable/btn_toggle_background_common"
                android:textOff="Common"
                android:textOn="Common" />

            <ToggleButton
                android:id="@+id/toggle_rare"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@drawable/btn_toggle_background_rare"
                android:textOff="Rare"
                android:textOn="Rare" />

            <ToggleButton
                android:id="@+id/toggle_epic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@drawable/btn_toggle_background_epic"
                android:textOff="Epic"
                android:textOn="Epic" />

            <ToggleButton
                android:id="@+id/toggle_legendary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@drawable/btn_toggle_background_legendary"
                android:textOff="Legendary"
                android:textOn="Legendary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:text="Filter by Type"
                android:textSize="18sp"
                android:textStyle="bold" />

                <CheckBox
                    android:id="@+id/checkbox_museums"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Museums and Collections" />

                <CheckBox
                    android:id="@+id/checkbox_nature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nature and Outdoors" />

                <CheckBox
                    android:id="@+id/checkbox_historical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Historical and Architectural" />

                <CheckBox
                    android:id="@+id/checkbox_art"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Art and Culture" />

                <CheckBox
                    android:id="@+id/checkbox_unusual"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Unusual and Unique" />

                <CheckBox
                    android:id="@+id/checkbox_other"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Other" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:text="Filter Distance"
                android:textSize="18sp"
                android:textStyle="bold" />

            <SeekBar
                android:id="@+id/seekbar_distance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="200"
                android:text="... km" />

            <TextView
                android:id="@+id/textview_distance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="2dp" />

            <Button
                android:id="@+id/apply_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@color/apply_button_background"
                android:padding="12dp"
                android:text="Apply" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>